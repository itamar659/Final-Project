<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Project.UI"
             x:Class="Project.UI.FindHostPage"
             Title="FindHostPage"
             BackgroundColor="White">
    <local:MainTemplate>
        <local:MainTemplate.PageContent>
            <StackLayout Spacing="20">
                <Label Text="{Binding WelcomingMessage}"
                       FontFamily="RobotoBold"
                       FontSize="22"
                       HorizontalOptions="Center"
                       Margin="0 0 20 0"/>
                <Label Text="Find a Host:" />
                <Entry Placeholder="Host Name" />
                <CollectionView ItemsSource="{Binding AvailableHosts}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Label Text="{Binding InviterName}" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </local:MainTemplate.PageContent>
    </local:MainTemplate>
</ContentPage>