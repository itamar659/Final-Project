<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Client"
             x:Class="Client.MainPage"
             x:DataType="local:MainPageViewModel"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <local:MainTemplate PageTitle="Enjoy Music Your Way">
        <local:MainTemplate.PageContent>
            <StackLayout Spacing="40">

                <!-- Additional logins -->
                <Label Text="Choose one of the following:"
                       TextColor="{StaticResource LightGreyColor}"
                       HorizontalOptions="Center" />

                <Button Text="Socials Media"
                        Style="{StaticResource RedButton}"
                        Command="{Binding SignInCommand}" />

                <Button Text="Guest"
                        Style="{StaticResource RedButton}"
                        Command="{Binding GuestLoginCommand}" />
            </StackLayout>
        </local:MainTemplate.PageContent>
    </local:MainTemplate>
</ContentPage>
