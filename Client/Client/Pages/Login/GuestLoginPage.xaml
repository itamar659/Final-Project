<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Client"
             x:Class="Client.GuestLoginPage"
             x:DataType="local:GuestLoginViewModel"
             Title="GuestLoginPage"
             BackgroundColor="White"
             Shell.FlyoutBehavior="Disabled">
    <local:MainTemplate PageTitle="Enjoy Music Your Way">
        <local:MainTemplate.PageContent>
            <StackLayout Spacing="20">
                <Entry Placeholder="Temporary Password:"
                       x:Name="entry"
                       Text="{Binding Password, Mode=OneWayToSource}"
                       Margin="30, 0, 0, 0" />
                <Grid ColumnDefinitions="*, *">
                    <Button Grid.Column="1"
                            Text="Join"
                            Style="{StaticResource RedButton}"
                            Command="{Binding LoginCommand}" />
                </Grid>
                <Label Text="{Binding ErrorMsgHolder}" />
            </StackLayout>
        </local:MainTemplate.PageContent>
    </local:MainTemplate>
</ContentPage>